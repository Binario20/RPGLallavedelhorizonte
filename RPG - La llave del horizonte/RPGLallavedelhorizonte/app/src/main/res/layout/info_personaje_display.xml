            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                android:id="@+id/superText34"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Información general"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/superText17"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/newPerNombreTxt"
                    android:textStyle="italic" />

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/nomPerso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/superText19"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/newPerEspecieTxt"
                    android:textStyle="italic" />

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/especiePerso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/superText21"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/newPerProcedenciaTxt"
                    android:textStyle="italic" />

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/procedenciaPerso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/superText23"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/newPerClaseTxt"
                    android:textStyle="italic" />

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/clasePerso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/superText25"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lengua primaria:"
                    android:textStyle="italic" />

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/lengua1Perso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/superText27"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lengua secundaria:"
                    android:textStyle="italic" />

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/lengua2Perso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                android:id="@+id/superText35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Información especifica"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/superText36"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/newPerSexoTxt"
                    android:textStyle="italic" />

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/sexoPerso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/superText38"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/newPerEdadTxt"
                    android:textStyle="italic" />

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/edadPerso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.marea_binario.rpg_lallavedelhorizonte.SuperText
                    android:id="@+id/superText40"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
