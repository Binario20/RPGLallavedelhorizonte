<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/dipObjImg"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/todoynada"
        tools:ignore="ImageContrastCheck" />

    <com.marea_binario.rpg_lallavedelhorizonte.SuperText
        android:id="@+id/dipObjNom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:text="Nombre"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/dipObjNum"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/dipObjImg"
        app:layout_constraintTop_toTopOf="@+id/dipObjImg" />

    <com.marea_binario.rpg_lallavedelhorizonte.SuperText
        android:id="@+id/dipObjDesc"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="4dp"
        android:text="Mini descripcion"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/dipObjImg"
        app:layout_constraintEnd_toStartOf="@+id/dipObjNum"
        app:layout_constraintStart_toEndOf="@+id/dipObjImg"
        app:layout_constraintTop_toBottomOf="@+id/dipObjNom" />

    <com.marea_binario.rpg_lallavedelhorizonte.SuperText
        android:id="@+id/dipObjNum"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>